		"bcrypt": "^3.0.6",
		"body-parser": "^1.19.0",
		"concurrently": "^4.1.0",
		"crypto": "^1.0.1",
		"dotenv": "^7.0.0",
		"express": "^4.17.3",
		"if-env": "^1.0.4",
		"jsonwebtoken": "^8.5.1",
